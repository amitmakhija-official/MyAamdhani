@model MyAamdhani.Models.CartViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Total = 0m;
}

<!--section start-->
<section class="cart-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table cart-table table-responsive-xs">
                    <thead>
                        <tr class="table-head">
                            <th scope="col">image</th>
                            <th scope="col">product name</th>
                            <th scope="col">price</th>
                            <th scope="col">quantity</th>
                            <th scope="col">action</th>
                            <th scope="col">total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!ReferenceEquals(Model, null))
                        {
                            if (Model.CartItemList.Count() > 0)
                            {
                                foreach (var item in Model.CartItemList)
                                {
                                    Total += item.UnitPrice * item.Quantity;
                                    <tr>
                                        <td>
                                            <a href="#"><img src="@item.CoverImage" alt=""></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("ProductDetails","ShowProduct", new {prodKey=item.ProductUniqueKey.ToString()})">@item.ProductName</a>
                                            <div class="mobile-cart-content row">
                                                <div class="col-xs-3">
                                                    <div class="qty-box">
                                                        <div class="input-group">
                                                            <input type="text" name="quantity" class="form-control input-number" value="@item.Quantity">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-3">
                                                    <h2 class="td-color">&#8377; @item.UnitPrice</h2>
                                                </div>
                                                <div class="col-xs-3">
                                                    <h2 class="td-color">
                                                        <a href="#" class="icon"><i class="ti-close"></i></a>
                                                    </h2>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h2>&#8377; @item.UnitPrice</h2>
                                        </td>
                                        <td>
                                            <div class="qty-box">
                                                <div class="input-group">
                                                    <input type="number" name="quantity" class="form-control input-number" value="@item.Quantity">
                                                </div>
                                            </div>
                                        </td>
                                        <td><a href="#" class="icon"><i class="ti-close"></i></a></td>
                                        <td>
                                            <h2 class="td-color">&#8377; @(item.Quantity * item.UnitPrice)</h2>
                                        </td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">
                                        <span style="background-color: crimson; color: white; font-weight: bold;font-family: cursive">Oh Snap! Your Cart Is Empty.</span>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">
                                    <span style="background-color: crimson; color: white; font-weight: bold;font-family: cursive">Oh Snap! Your Cart Is Empty.</span>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
                <table class="table cart-table table-responsive-md">
                    <tfoot>
                        <tr>
                            <td>total price :</td>
                            <td>
                                <h2>&#8377; @Total </h2>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row cart-buttons">
            <div class="col-6"><a href="@Url.Action("Index","ShowProduct")" class="btn btn-solid">continue shopping</a></div>
            <div class="col-6"><a href="#" class="btn btn-solid">check out</a></div>
        </div>
    </div>
</section>
<!--section end-->
